<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <div class="col-6 offset-3">
    <h1 class="mt-3">Log In</h1>
    <form method="POST" action="/login" class="needs-validation" novalidate>
      <div class="mb-3 mt-4">
        <label for="username" class="form-label">Username</label>
        <input
          type="text"
          id="username"
          name="username"
          class="form-control"
          required
        />
      </div>
      <div class="mb-3 mt-4">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          id="password"
          name="password"
          class="form-control"
          required
        />
      </div>
      <button class="btn btn-dark new-ejs-btn mt-1 mb-4">Login</button>
    </form>
  </div>
</div>
