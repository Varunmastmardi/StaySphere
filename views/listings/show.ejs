<% layout("/layouts/boilerplate") %>
<script>
  const mapApi= "<%= process.env.MAP_API %>";
  
  const mapCoordinates = <%-JSON.stringify(listing.geometry.coordinates) %>;
</script>

<div class="row">
  <!-- showing Individual listing -->
  <div class="col-8 offset-3 mt-3">
    <h3><%= listing.title %></h3>
  </div>
  <div class="card listing-card col-6 offset-3 mt-2">
    <img
      class="card-img-top show-img"
      src="<%= listing.image.url %>"
      alt="Lisiting Image"
    />
    <div class="card-body">
      <p class="card-text mt-2">
        <b> Description:</b> <%= listing.description %> <br />
        <b> Price: </b>&#8377; <%= listing.price.toLocaleString("en-IN") %>
        <br />
        <b> Location: </b><%= listing.location %> <br />
        <b> Country: </b><%= listing.country %> <br />
        <b> Owner : </b>@<%= listing.owner.username %>
      </p>
    </div>
  </div>

  <% if (currUser && currUser._id.equals(listing.owner._id)) { %>

  <div class="show-btns mb-3">
    <a
      class="btn btn-dark col-0 offset-3 edit-ejs-btn"
      href="/listings/<%= listing._id %>/edit"
      >Update</a
    >
    <form method="POST" action="/listings/<%= listing._id%>?_method=DELETE">
      <button class="btn btn-danger offset-3">Delete</button>
    </form>
  </div>
  <% } %>

  <!-- creating Reviews -->

  <div class="col-8 offset-3 mb-3">
    <% if (currUser) { %>
    <hr />
    <form
      method="POST"
      action="/listings/<%= listing._id %>/reviews"
      class="needs-validation"
      novalidate
    >
      <div class="mt-3">
        <h4>Add Your Review</h4>
        <label for="rating" class="form-label">Rating</label>
        <fieldset class="starability-slot">
          <input
            type="radio"
            id="no-rate"
            class="input-no-rate"
            name="review[rating]"
            value="1"
            checked
            aria-label="No rating."
          />
          <input
            type="radio"
            id="first-rate1"
            name="review[rating]"
            value="1"
          />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input
            type="radio"
            id="first-rate2"
            name="review[rating]"
            value="2"
          />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input
            type="radio"
            id="first-rate3"
            name="review[rating]"
            value="3"
          />
          <label for="first-rate3" title="Average">3 stars</label>
          <input
            type="radio"
            id="first-rate4"
            name="review[rating]"
            value="4"
          />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input
            type="radio"
            id="first-rate5"
            name="review[rating]"
            value="5"
          />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>

      <div class="mb-3">
        <label for="comment" class="form-label">Comment</label>
        <textarea
          rows="5"
          type="text"
          id="comment"
          class="form-control"
          name="review[comment]"
          required
        ></textarea>
        <div class="valid-feedback">Looks Good!</div>
        <div class="invalid-feedback">Enter Valid Comment</div>
      </div>
      <button class="btn btn-outline-dark">Submit</button>
    </form>
    <% } %>

    <!-- showing Reviews -->
    <hr />
    <% if (listing.reviews.length > 0) { %>
    <div class="row">
      <h4 class="mt-2 mb-3">See All Reviews</h4>
      <% for( review of listing.reviews ) { %>
      <div class="card col-5 ms-3 mt-2 mb-3">
        <div class="card-body">
          <h5 class="card-title mt-2">@<%= review.author.username %></h5>
          <p class="card-text"><%= review.comment %></p>
          <p
            class="starability-result card-text mb-3"
            data-rating="<%= review.rating %>"
          ></p>
          <% if (currUser) { %>
          <form
            method="post"
            action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE"
          >
            <button class="btn btn-danger btn-sm mb-3">Delete</button>
          </form>
          <% } %>
        </div>
      </div>
      <% } %>
    </div>
    <% } %>
  </div>
  <div class="col-8 offset-3 mb-3">
    <h3>Where you'll be</h3>
    <div id="map"></div>
  </div>
</div>

<script src="/js/map.js"></script>
